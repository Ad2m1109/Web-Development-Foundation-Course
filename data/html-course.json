      "title": "Media Elements",
      "description": "Images, Audio, and Video elements",
      "content": {
        "title": "Media in HTML",
        "codeExample": "<!-- Images -->\n<img src=\"image.jpg\" alt=\"Description\" width=\"300\" loading=\"lazy\">\n<picture>\n    <source media=\"(min-width:800px)\" srcset=\"large.jpg\">\n    <img src=\"small.jpg\" alt=\"Responsive image\">\n</picture>\n\n<!-- Audio -->\n<audio controls>\n    <source src=\"audio.mp3\" type=\"audio/mpeg\">\n    Your browser does not support audio.\n</audio>\n\n<!-- Video -->\n<video width=\"320\" height=\"240\" controls>\n    <source src=\"video.mp4\" type=\"video/mp4\">\n    Your browser does not support video.\n</video>",
        "exercise": {
          "instructions": "Add different types of media",
          "defaultHtml": "<!-- Add images, audio, and video -->",
          "hint": {
            "elements": [
              "<img>",
              "<picture>, <source>",
              "<audio>",
              "<video>"
            ]
          }
        }
